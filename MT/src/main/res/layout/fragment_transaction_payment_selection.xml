<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_three"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingEnd="1dp"
    android:paddingStart="1dp"
    android:paddingTop="1dp"
    tools:context="com.verifone.swordfish.manualtransaction.TransactionFrames.TransactionPaymentSelection">

    <FrameLayout
        android:id="@+id/itemList"
        android:layout_width="498dp"
        android:layout_height="match_parent">
    </FrameLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/white_three" />

    <LinearLayout
        android:layout_width="758dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/paymentSelectionFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_three" />

        <FrameLayout
            android:id="@+id/paymentsButtonsFrame"
            android:layout_width="match_parent"
            android:layout_height="94dp">

        </FrameLayout>
    </LinearLayout>
</LinearLayout>