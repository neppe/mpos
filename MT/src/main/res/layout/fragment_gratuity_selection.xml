<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.swordfish.manualtransaction.SupportFragments.GratuitySelection">

    <LinearLayout
        android:layout_width="758dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="508sp"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60sp"
                android:layout_height="52sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="138sp"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_green_checkmark"
                android:contentDescription="@null" />

            <Space
                android:layout_width="20dp"
                android:layout_height="43dp" />

            <TextView
                android:id="@+id/textViewTC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto-Regular"
                android:text="@string/gratuty_amount_label"
                android:textColor="@color/greyish_brown"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/receiptOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto-Regular"
                android:text="@string/gratuity_wait_message"
                android:textColor="@color/warm_grey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="43dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/noTip"
                    android:layout_width="122dp"
                    android:layout_height="90dp"
                    android:background="@color/azure"
                    android:scaleType="fitCenter"
                    android:src="@drawable/keypad_button_0"
                    android:text="@string/button_no_tip_label"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/tenTip"
                    android:layout_width="122dp"
                    android:layout_height="90dp"
                    android:background="@color/azure"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_blue_122_x_89"
                    android:text="@string/str_ten_percent"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/eighteenTip"
                    android:layout_width="122sp"
                    android:layout_height="90sp"
                    android:background="@color/azure"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_blue_122_x_89"
                    android:text="@string/str_eighteen_percent"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="30dp"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/twenty5Tip"
                    android:layout_width="122sp"
                    android:layout_height="90sp"
                    android:background="@color/azure"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_blue_122_x_89"
                    android:text="@string/str_twentyfive_percent"
                    android:textColor="@color/white" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
            </LinearLayout>



        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_three" />

        <FrameLayout
            android:id="@+id/gratuityButtonsFrame"
            android:layout_width="match_parent"
            android:layout_height="94sp">

        </FrameLayout>


    </LinearLayout>

</FrameLayout>
