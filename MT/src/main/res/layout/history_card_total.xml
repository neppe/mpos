<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historyCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="@string/history_card_type_credit"
            android:textColor="@color/warm_grey" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="70dp"
            android:layout_height="42dp"
            android:layout_marginBottom="56sp"
            android:layout_marginTop="20sp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/c_c_icon_discover_l_g"
            android:contentDescription="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historyCardHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:text="@string/str_cardholder"
            android:textAlignment="viewStart"
            android:textColor="@color/greyish_brown"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/historyCardOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textAlignment="viewStart"
            android:textColor="@color/warm_grey" />

        <TextView
            android:id="@+id/historyCardExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"
            android:layout_marginTop="3sp"
            android:textColor="@color/warm_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/historyCardTotal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="35sp"
        android:layout_weight="1"
        android:gravity="end"
        android:text="@string/str_dollar_zero"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>