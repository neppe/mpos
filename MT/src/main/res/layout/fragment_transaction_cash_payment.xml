<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_three"
    android:orientation="horizontal"
    android:paddingBottom="1dp"
    android:paddingEnd="1dp"
    android:paddingStart="1dp"
    android:paddingTop="1dp"
    tools:context="com.verifone.swordfish.manualtransaction.TransactionFrames.TransactionCashPayment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/cashDetail"
            android:layout_width="498sp"
            android:layout_height="match_parent">

        </FrameLayout>

        <View
            android:id="@+id/dividerCash1"
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="@color/white_three" />

        <LinearLayout
            android:layout_width="758sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/cashCompanion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
