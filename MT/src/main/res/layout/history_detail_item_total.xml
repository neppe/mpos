<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_two"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/historyTxTotalLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:text="@string/str_label_textview"
            android:textAlignment="viewStart"
            android:textColor="@color/greyish_brown"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/historyTxTotalTaxLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
            android:layout_marginStart="25dp"
            android:text="@string/str_label_textview"
            android:textAlignment="viewStart"
            android:textColor="@color/warm_grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/historyTxTotalAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_weight="1"
        android:text="@string/str_dollar_value_with_sign"
        android:textColor="@color/deep_lilac"
        android:textSize="40sp"
        android:textStyle="bold" />
</LinearLayout>