<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="@dimen/left_container_width"
        android:layout_height="match_parent"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_buttons_holder"
        android:background="@color/cool_grey" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/container">

        <include layout="@layout/layout_keyboard"
            android:id="@+id/numeric_keyboard_holder" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_alignBottom="@+id/numeric_keyboard_holder"
            android:layout_toRightOf="@+id/numeric_keyboard_holder"
            android:layout_marginStart="40dp">

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:id="@+id/firstLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/quantityLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="Roboto-Medium"
                    android:text="@string/quantityLabel"
                    android:textColor="@color/warm_grey"
                    android:textSize="14sp" />

                <Space
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/quantityField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:inputType="number"
                    android:text="@string/str_number_one"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ImageButton
                    android:id="@+id/btn_increment"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_qty_up"
                    android:contentDescription="@null" />

                <Space
                    android:layout_width="33dp"
                    android:layout_height="20dp" />

                <ImageButton
                    android:id="@+id/btn_decrement"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_qty_down_off"
                    android:contentDescription="@null" />

            </LinearLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white_three" />

            <Space
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/button_add"
                    android:contentDescription="@null" />


            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="27dp" /> <!-- this custom number is to match the alignment with
            numeric keyboard -->

        </LinearLayout>

        <include layout="@layout/layout_buttons"
            android:id="@+id/bottom_buttons_holder" />


    </RelativeLayout>

</LinearLayout>