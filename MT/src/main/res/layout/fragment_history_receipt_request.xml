<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:layout_height="580dp"
    android:background="@drawable/linear_layout_history_round_corners"
    android:orientation="vertical"
    tools:context="com.verifone.swordfish.manualtransaction.HistoryFragments.HistoryReceiptRequest">


    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="29dp"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:src="@drawable/icon_back" />

    <TextView
        android:id="@+id/textViewNoteTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="89dp"
        android:text="@string/send_a_receipt"
        android:textAppearance="@style/fontForTextViewTransactionHistoryTitleNote" />

    <TextView
        android:id="@+id/textViewNoteSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/delivery_method_label"
        android:textAppearance="@style/fontForTextViewTransactionHistorySubTitleNote" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="40dp"
        android:background="@color/azure"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/buttonSendEmail"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="@string/str_label_email"
            android:textAppearance="@style/fontForTextViewTransactionHistoryButton" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="20dp"
        android:background="@color/azure"
        android:gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/buttonSendSMS"
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="@string/str_label_sms"
            android:textAppearance="@style/fontForTextViewTransactionHistoryButton" />
    </LinearLayout>

</LinearLayout>
