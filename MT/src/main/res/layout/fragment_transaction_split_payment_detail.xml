<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.swordfish.manualtransaction.SupportFragments.TransactionSplitPaymentDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/white_two"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="30sp"
                android:text="@string/total_text_label"
                android:textAppearance="@style/fontForTextViewItemBasket" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/amountToPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="31sp"
                android:text="@string/str_dollar_zero_with_space"
                android:textAppearance="@style/fontForTextViewTransactionHistorySubDetailTotal" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/warm_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="431dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/transactionList"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/pinkish_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="bottom"
            android:background="@color/white_two"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/balanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/balance_text_label"
                android:textAppearance="@style/fontForTextViewTransactionRefundTitle" />

            <Space
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/balanceTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/str_dollar_zero_with_space"
                android:textAppearance="@style/fontForTextViewTransactionHistoryGranTotal" />

            <Space
                android:layout_width="31dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
