<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.swordfish.manualtransaction.SupportFragments.SplitMethodSelection">

    <LinearLayout
        android:layout_width="758dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="734dp"
            android:layout_height="508dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="138dp"
                android:text="@string/split_payment_label"
                android:textAppearance="@style/fontForTextViewTransactionRefundTitle" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="19dp"
                android:text="@string/select_payment_type"
                android:textAppearance="@style/fontForTextViewTransactionRefundSubTitle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/methodCashButton"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_marginStart="32dp"
                    android:background="@color/azure"
                    android:text="@string/cash_label"
                    android:textAppearance="@style/fontForTextViewTransactionHistoryButton" />

                <Space
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/methodCreditButton"
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/azure"
                    android:text="@string/creditCardLabel"
                    android:textAppearance="@style/fontForTextViewTransactionHistoryButton" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/dividerCash2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_three" />

        <FrameLayout
            android:id="@+id/methodButtonsFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
</FrameLayout>
