<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.swordfish.manualtransaction.HistoryFragments.VoidCompanionProcessing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="184dp"
            android:text="@string/history_ready_to_void_label"
            android:textAlignment="center"
            android:textColor="@color/greyish_brown"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/subHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="@string/history_void_process_label"
            android:textAlignment="center"
            android:textColor="@color/warm_grey"
            android:textSize="20sp" />

        <ProgressBar
            android:id="@+id/voidProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</FrameLayout>
