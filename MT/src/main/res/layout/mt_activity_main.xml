<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.verifone.swordfish.manualtransaction.MainActivityFragment">
    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@color/slate"
                android:orientation="horizontal">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tab_layout"
                    style="@style/TabLayout"
                    android:layout_width="694dp"
                    android:layout_height="match_parent"
                    android:background="@color/slate"
                    android:elevation="6dp"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:tabContentStart="50dp"
                    app:tabMinWidth="130dp" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/slate" />

                <TextView
                    android:id="@+id/textViewVersion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="23dp"
                    android:layout_weight="1"
                    android:background="@color/slate"
                    android:paddingEnd="20dp"
                    android:text="@string/str_label_mpos"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/tab_layout"
                android:layout_weight="1"
                android:background="@android:color/white">

            </android.support.v4.view.ViewPager>

        </LinearLayout>

        <FrameLayout
            android:layout_width="501dp"
            android:layout_height="694dp"
            android:layout_marginStart="755dp"
            android:id="@+id/mainHistoryDetailFrameLayout"
            android:background="@drawable/linear_layout_history_round_corners"
            android:visibility="invisible"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</FrameLayout>