<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.verifone.swordfish.manualtransaction.HistoryFragments.HistoryRefundCompanionType">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="508sp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="138sp"
                android:text="@string/history_refund_type_label"
                android:textAlignment="center"
                android:textColor="@color/greyish_brown"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="@string/history_select_refund_type_label"
                android:textAlignment="center"
                android:textColor="@color/warm_grey"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="19sp"
                android:orientation="horizontal"
                android:paddingStart="52sp">

                <Button
                    android:id="@+id/historySelectCash"
                    android:layout_width="300sp"
                    android:layout_height="90sp"
                    android:layout_weight="1"
                    android:background="@color/azure"
                    android:text="@string/cash_button_label"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

                <Space
                    android:layout_width="30sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/historySelectCredit"
                    android:layout_width="300sp"
                    android:layout_height="90sp"
                    android:layout_weight="1"
                    android:background="@color/azure"
                    android:text="@string/history_card_type_credit"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/white_three" />

        <FrameLayout
            android:id="@+id/refundTypeButtons"
            android:layout_width="match_parent"
            android:layout_height="94sp">

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
