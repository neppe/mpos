<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.verifone.swordfish.manualtransaction.SupportFragments.CardDeclined">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="508sp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12sp"
                    android:layout_height="60sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="84sp"
                    android:src="@drawable/icon_exclamation"
                    android:contentDescription="@null" />

                <TextView
                    android:id="@+id/tvErrorReading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40sp"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/error_reading_card"
                    android:textColor="@color/greyish_brown"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tvSwipeAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="Roboto-Regular"
                    android:text="@string/please_swipe_again"
                    android:textColor="@color/warm_grey"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/errorButton"
                    android:layout_width="384sp"
                    android:layout_height="90sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50sp"
                    android:background="@color/azure"
                    android:enabled="true"
                    android:text="@string/str_change_payment_type"
                    android:textAppearance="@style/fontForTextViewTransactionHistoryButton" />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/white_three" />

        <FrameLayout
            android:id="@+id/cardDeclinedButtonsFrame"
            android:layout_width="match_parent"
            android:layout_height="94sp">

        </FrameLayout>
    </LinearLayout>

</FrameLayout>
